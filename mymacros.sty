\ProvidesPackage{mymacros}

% math styles
\newcommand{\mymathit}[1]{\ensuremath{\mbox{\itshape #1}}}% in math mode make words tight

%\renewcommand{\vec}[1]{\ensuremath{\mathbf{#1}}} % vector as bold
%\renewcommand{\vec}[1]{\ensuremath{({#1}_1, {#1}_2})} % vector as (x_1, x_2)
\newcommand{\norm}[1]{\ensuremath{\lVert#1\rVert}}% vector norm
\newcommand{\xvec}{\ensuremath{(x_1, x_2)}}%
\newcommand{\zvec}{\ensuremath{(z_1, z_2)}}%

\newcommand{\transpose}[1]{\ensuremath{#1}^{\mathrm{T}}}% matrix transpose

% operators
\newcommand{\conv}[2]{(\ensuremath{#1 \ast #2})}% convolution
\newcommand*\diff{\mathop{}\!\mathrm{d}}% \diff for differentiator symbol 'd'
\newcommand*\diffsq{\mathop{}\!\mathrm{d^2}}% \diff for differentiator symbol 'd'
\newcommand*{\ds}{\ensuremath{\diff{\mathbf{s}}}}% ds (vector)

% math symbols
\newcommand{\E}{\ensuremath{\mathbb{E}}}% expected value
\newcommand{\R}{\ensuremath{\mathbb{R}}}% R - the reals
\newcommand{\RS}{\ensuremath{\mathbb{R}^2}}% R^2 the plane

\DeclareMathOperator*{\argmin}{\arg\!\min}% argmin
\DeclareMathOperator*{\argmax}{\arg\!\max}% argmax

% integrals
\newcommand{\iintW}[1]{%
    \hspace{-1em} \iint\limits_{\xvec \in W} \hspace{-1em} {#1 \diff{x_2} \diff{x_1}}%
}%
\newcommand{\iintR}[1]{%
    \hspace{-1em} \iint\limits_{\xvec \in \RS} \hspace{-1em} {#1 \diff{x_2} \diff{x_1}}%
}%
\newcommand{\iintRZ}[1]{%
    \hspace{-1em} \iint\limits_{\zvec \in \RS} \hspace{-1em} {#1 \diff{z_2} \diff{z_1}}%
}%

% sums
\newcommand{\sumSone}[1]{%
    \frac{1}{h} \hspace{-0.1em} \sum\limits_{s \in N} { #1 }%
}%
\newcommand{\sumS}[1]{%
    \frac{1}{h^2} \hspace{-1em} \sum\limits_{(s_1, s_2) \in N} { #1 }%
}%
\newcommand{\sumSn}[1]{%
    \frac{1}{n h^2} \hspace{-1em} \sum\limits_{(s_1, s_2) \in N} { #1 }%
}%

% kernel macros
\newcommand{\dotdot}{\ensuremath{(\cdot, \cdot)}}
\newcommand{\Kdots}{\ensuremath{K}\dotdot}%

% Set up research question label, override equation label to use brackets (autoref)
\newtheorem{researchquestion}{Research question}%
\providecommand*{\researchquestionautorefname}{Research~question}%

\theoremstyle{plain}
\newtheorem{thm}{Theorem}[chapter]% reset theorem numbering for each chapter

\theoremstyle{definition}
\newtheorem{defn}{Definition}[chapter]% definition numbers are dependent on theorem numbers
\crefname{defn}{definition}{definitions}

\newtheorem{exmp}{Example}[chapter]% same for example numbers

\newtheorem{question}{Question}% definition numbers are dependent on theorem numbers
\crefname{question}{question}{questions}

\newlist{subquestions}{enumerate}{10}
\setlist[subquestions]{label*=\textup{(}\alph*\textup{)},ref=\thequestion(\alph*)}
\crefname{subquestionsi}{question}{questions}

\newlist{assumptions}{enumerate}{10}
\setlist[assumptions]{label*=\arabic*.,ref=\arabic*}
\crefname{assumptionsi}{assumption}{assumptions}

\newlist{properties}{enumerate}{10}
\setlist[properties]{label*=\arabic*.,ref=\arabic*}
\crefname{propertiesi}{property}{properties}

